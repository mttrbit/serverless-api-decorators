{
    "compilerOptions": {
        "declaration": true,
        "alwaysStrict": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "noEmitHelpers": false,
        "noImplicitAny": false,
        "types": [
            "node"
        ],
        "mapRoot": "./",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "./",
        "outDir": "./dist",
        "baseUrl": ".",
        "sourceMap": true,
      "target": "es5",
      "lib": [
            "es2015",
            "es2016.array.include"
        ]
    },
    "exclude": [
        "api/user",
        "dist",
        "node_modules"
    ]
}
