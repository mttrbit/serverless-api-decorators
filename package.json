{
  "name": "@mttrbit/sls-api-decorators",
  "version": "0.0.3",
  "description": "serveless plugin to write lambda functions in typescript making use of IoC technics to reduce coding effort",
  "license": "MIT",
  "repository": "https://github.com/mttrbit/serverless-api-decorators",
  "author": "",
  "keywords": [
    "serverless api typescript decorators auto configuration"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "clean": "npm run unlink:unlink && rimraf dist",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "link:copy": "cp ./package.json.link ./dist/package.json",
    "link:link": "npm run link:copy && npm link ./dist",
    "unlink:unlink": "npm unlink ./dist",
    "build": "npm run clean && npm run lint && echo Using TypeScript && tsc --version && tsc --pretty && npm run link:link",
    "test": "npm run build && mocha --compilers ts:ts-node/register --recursive 'src/**/*.spec.ts'",
    "coverage": "nyc --include='src/**/*.ts' --reporter=text --reporter=html --reporter=lcov mocha --compilers ts:ts-node/register --recursive 'test/**/*.test.ts'",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "changelog": "standard-version",
    "release": "yarn reset && yarn test && yarn changelog",
    "reset": "git clean -dfx && git reset --hard && yarn"
  },
  "dependencies": {},
  "peerDependencies": {},
  "devDependencies": {
    "@mttrbit/lambda-handler": "^1.0.2",
    "@types/aws-lambda": "0.0.14",
    "@types/chai": "^3.5.2",
    "@types/debug": "0.0.29",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.0",
    "chai": "^3.0.0",
    "coveralls": "^2.0.0",
    "debug": "^2.6.8",
    "fs-extra": "^5.0.0",
    "mocha": "^3.0.0",
    "nyc": "^10.0.0",
    "rimraf": "^2.6.1",
    "source-map-support": "^0.5.0",
    "standard-version": "^4.2.0",
    "ts-node": "^4.0.2",
    "ts-simple-ast": "^4.1.0",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.4.2",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.2"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "dist"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [],
    "all": true
  }
}
